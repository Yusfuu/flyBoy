<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>

<body>
  <div class="bg-white py-6 sm:py-8 lg:py-12">
    <div class="max-w-screen-lg px-4 md:px-8 mx-auto">
      <!-- text - start -->
      <div class="mb-10 md:mb-16">
        <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6">Choose a Bundle</h2>

        <p class="max-w-screen-md text-gray-500 md:text-lg text-center mx-auto">This is a section of some simple filler
          text, also known as placeholder text. It shares some characteristics of a real written text but is random or
          otherwise generated.</p>
      </div>
      <!-- text - end -->

      <div class="flex flex-wrap justify-center items-center gap-4 sm:gap-0">

        <!-- right side - start -->
        <div class="w-full sm:w-1/2 bg-gradient-to-tr from-indigo-500 to-purple-400 rounded-lg shadow-xl p-6 sm:p-8">
          <div class="flex flex-col lg:flex-row justify-between items-start gap-4 mb-4">
            <div>
              <h3 class="text-white text-2xl sm:text-3xl font-semibold">
                <%= flight.departure_airport;%> to <%= flight.arrival_airport;%>
              </h3>
              <!-- <p class="text-indigo-100">Ebook + Video course</p> -->
            </div>
            <span
              class="flex justify-center gap-2 items-center	 order-first lg:order-none bg-indigo-200 bg-opacity-50 text-white text-xs font-semibold tracking-wider uppercase rounded-full px-3 py-1">Best
              value
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            </span>
          </div>

          <div class="space-x-2 mb-4">
            <span class="text-white text-4xl font-bold">
              <%=flight.price%> MAD
            </span>
            <span class="text-indigo-100 text-2xl line-through">
              <%=flight.price+20%> MAD
            </span>
          </div>

          <ul class="text-indigo-100 space-y-2 mb-6">
            <!-- feat - start -->
            <li class="flex items-center gap-1.5">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0" viewBox="0 0 20 20"
                fill="currentColor">
                <path fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd" />
              </svg>

              <span>
                <%= flight.seats;%> seats available
              </span>
            </li>
            <!-- feat - end -->

            <!-- feat - start -->
            <li class="flex items-center gap-1.5">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0" viewBox="0 0 20 20"
                fill="currentColor">
                <path fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd" />
              </svg>

              <span> Departure at
                <%= new Date(flight.departure_datetime).toDateString(); %>
              </span>
            </li>
            <!-- feat - end -->

            <!-- feat - start -->
            <li class="flex items-center gap-1.5">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0" viewBox="0 0 20 20"
                fill="currentColor">
                <path fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd" />
              </svg>

              <span>
                Arrival at
                <%= new Date(flight.arrival_datetime).toDateString(); %>
              </span>
            </li>

          </ul>

          <div class="flex justify-center items-center gap-4 mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2}
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <div class="flex flex-col items-start gap-2">

              <div class="w-20 h-12 flex border rounded overflow-hidden bg-pink-50">
                <p id="person"
                  class="cursor-pointer w-full flex justify-center items-center focus:ring ring-inset ring-indigo-300 outline-none transition duration-100 px-4 py-2">
                  1
                </p>

                <div class="flex flex-col border-l divide-y">
                  <button id="up"
                    class="w-6 flex justify-center items-center flex-1 bg-white hover:bg-gray-100 active:bg-gray-200 leading-none select-none transition duration-100">+</button>
                  <button id="down"
                    class="w-6 flex justify-center items-center flex-1 bg-white hover:bg-gray-100 active:bg-gray-200 leading-none select-none transition duration-100">-</button>
                </div>
              </div>
            </div>
          </div>


          <form action="/ticket" method="post">
            <input id="person-hidden" name="person_count" type="text" value="1" class="hidden">
            <input type="text" name="flight_id" value="<%=flight.id ;%>" class="hidden">
            <button id=" done"
              class="w-full bg-indigo-200 bg-opacity-50 hover:bg-indigo-300 active:bg-indigo-400 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3">Done</button>
          </form>
        </div>
        <!-- right side - end -->
      </div>
    </div>
  </div>
</body>
<script>
  let person = 1;
  const up = document.querySelector('#up');
  const down = document.querySelector('#down');
  const done = document.querySelector('#done');

  up.addEventListener('click', () => {
    if (person < 20) {
      document.querySelector('#person').innerHTML = ++person;
      document.querySelector("#person-hidden").setAttribute('value', person);
    }
  });

  down.addEventListener('click', () => {
    if (person > 1) {
      document.querySelector('#person').innerHTML = --person;
      document.querySelector("#person-hidden").setAttribute('value', person);
    }
  });


</script>

</html>